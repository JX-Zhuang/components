{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "target": "es5",
    "lib": ["dom", "dom.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "outDir": "./lib/",
    "rootDir": "./src",
    "declaration": true,
    "listEmittedFiles": true,
    "isolatedModules": true,
    "baseUrl": "./"
  },
  "include": ["./src/**/*", "typings"],
  "exclude": ["node_modules", "./src/setupProxy.js"],
  "files": ["src/index.ts"]
}
